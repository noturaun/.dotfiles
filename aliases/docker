# aliases to run predefined container name
alias mysql_setup="docker container create --name mysql -p 3306:3306 -e "MYSQL_ROOT_PASSWORD=123456" mysql:latest"
alias mysql="docker container start mysql && docker exec -it mysql /bin/bash"
